generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSettings {
  userId String @id
  currency String
}

model Category {
  userId String @id
  name  String
  icon  String
  type  String @default("income")
  createdAt DateTime @default(now())

  @@unique([userId, name, type])
}

model Transaction {
  id String @id @default(uuid())
  userId String

  amount Float
  description String
  date DateTime @default(now())
  type  String @default("income")

  category String
  categoryIcon  String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model MonthHistory {
  userId String
  day Int
  month Int
  year Int
  income Float
  expense Float

  @@id([userId, day, month, year])
}

model YearHistory {
  userId String
  month Int
  year Int
  income Float
  expense Float

  @@id([userId, month, year])
}
